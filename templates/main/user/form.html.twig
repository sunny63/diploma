{% extends 'main/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row no-gutters justify-content-center">
            <div class="col-12 col-lg-4 col-md-4">
                <div class="form-login">
                    <form method="post">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <h1 class="h3 mb-3 font-weight-normal text-center font-open-sans" style="font-size: 40px;">Регистрация пользователя</h1>
{#                        {{ form_widget(form, {'attr': {'novalidate': 'novalidate'}}) }}#}

                        {% if not form.vars.valid %}
                            {% for error in form.vars.errors.form.getErrors(true) %}
                                <div class="alert alert-warning" role="alert">{{ error.message }}</div>
                            {% endfor %}
                        {% endif %}

                        {{ form_start(form) }}

                        {{ form_label(form.nickname, 'Имя пользователя', {'label_attr': {'class': ' font-open-sans description-size'}} )}}
                        {{ form_widget(form.nickname, { 'attr': {'class': 'form-control orange-shadow border-orange mb-1 autofocus'} }) }}

                        {{ form_label(form.email, 'Адрес электронной почты', {'label_attr': {'class': ' font-open-sans description-size'}} )}}
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control orange-shadow border-orange mb-1'} }) }}

                        {{ form_label(form.plainPassword.first, 'Пароль', {'label_attr': {'class': ' font-open-sans description-size'}} )}}
                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control border-orange orange-shadow mb-1'} }) }}

                        {{ form_label(form.plainPassword.second, 'Повторите пароль', {'label_attr': {'class': ' font-open-sans description-size'}} )}}
                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control border-orange orange-shadow mb-1'} }) }}

                        {{ form_widget(form.save, { 'attr': {'class': 'btn btn-block orange-color mt-2 font-amatic btn-size'} }) }}

                        {{ form_end(form) }}

                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}