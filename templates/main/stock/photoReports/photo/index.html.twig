{% extends 'main/base.html.twig' %}

{% block title %}{{ photo_report.title }}{% endblock %}
{% block h1 %}{{ h1 }}{% endblock %}

{% block sidebar %}
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for new_post in new_posts %}
                    {% if new_post.isPublished %}
                        {% if loop.index == 1 %}
                            <div class="carousel-item active">
                        {% else %}
                            <div class="carousel-item">
                        {% endif %}
                        <a href="{{ path('main_post', {'id': new_post.id}) }}" style="text-decoration: none!important;">
                            <img src="{{ asset('uploads/images/post/' ~ new_post.image) }}" class="d-block w-100  rounded-top" alt="{{ new_post.title }}">
                            <div class="d-none d-md-block text-center">
                                <h5 class="orange-color rounded-bottom" >{{ new_post.title }}</h5>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
        </div>
{% endblock %}

{% block body %}
    <div class="container-fluid main-content">
        <div class="row no-gutters">
            <div class="col-12 col-lg-10 col-md-10">
                <div class="form ml-5 font-amatic">
                    <h2 class="mb-4 mt-4 title-size"><b>{{ photo_report.title }}</b></h2>
                    <img src="{{ asset('uploads/images/photoReport/' ~ photo_report.image) }}" class="mr-3 img-rounded" alt="Главное фото" width="600" align="left">
                    <b class="date-size">{{ photo_report.createAt|date('d.m.Y') }}</b>
                    <p class="pre-wrap font-open-sans description-size">{{ photo_report.description }}</p>

                    <a href="{{ path('main_photo_reports') }}" class="btn btn-danger main-color mb-3 btn-size">К фотоотчетам</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid main-content">
        <div class="row form ml-5 mt-4 col-10 pr-10">
            {% for photo in photos %}
                <div class="col-sm-4">
                    <figure>
                        <div class="thumb">
                            <a data-fancybox="gallery" href="{{ asset('uploads/images/photoReport/photo/' ~ photo.image) }}">
                                <img src="{{ asset('uploads/images/photoReport/photo/' ~ photo.image) }}" class="img-rounded img-fluid">
                            </a>
                        </div>
                        <figcaption class="text-center figcaption-size mt-1 font-open-sans">{{ photo.description }}</figcaption>
                    </figure>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}