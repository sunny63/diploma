{% extends 'main/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block sidebar %}
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for new_post in new_posts %}
                {% if loop.index == 1 %}
                <div class="carousel-item active">
                    {% else %}
                    <div class="carousel-item">
                        {% endif %}
                        <a href="{{ path('main_post', {'id': new_post.id}) }}" style="text-decoration: none!important;">
                            <img src="{{ asset('uploads/images/post/' ~ new_post.image) }}" class="d-block w-100  rounded-top" alt="{{ new_post.title }}">
                        <div class="d-none d-md-block text-center">
                            <h5 class="orange-color rounded-bottom" >{{ new_post.title }}</h5>
                        </div>
                        </a>
                    </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
{% endblock %}

{% block body %}

    <div class="container-fluid main-content">
        <div class="row no-gutters">
            <div class="col-12 col-lg-10 col-md-10">
                <div class="form">
                    <ul class="justify-content-center font-amatic">
                        {% for photo_report in photo_reports %}
                            <li class="list-group-item mb-2 border-0">
                                <h2 class="title-size mb-3"><b>{{ photo_report.title }}</b></h2>
                                <div class="media">
                                    <div>
                                        <img src="{{ asset('uploads/images/photoReport/' ~ photo_report.image) }}" class="mr-3 img-rounded" alt="Главное фото" width="500" align="left">
                                    </div>
                                    <div class="media-body pb-1">
                                        <b class="date-size">{{ photo_report.createAt|date('d.m.Y') }}</b>
                                        <p class="pre-wrap part-description font-open-sans description-size">{{ photo_report.description }}</p>
                                        <a href="{{ path('main_stock_photos', {'id': photo_report.id}) }}" class="btn btn-danger main-color btn-size">Подробнее</a>
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}