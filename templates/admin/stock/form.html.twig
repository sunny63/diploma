{% extends 'admin/adminbase.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block title_form %}Добавление новой акции{% endblock %}

{% block form %}

{#    <input type="hidden" name="_csrf_token" value="{{ csrf_token('registration') }}">#}
{#    {{ form_widget(form, {'attr': {'novalidate': 'novalidate'}}) }}#}

    {% if not form.vars.valid %}
        {% for error in form.vars.errors.form.getErrors(true) %}
            <div class="alert alert-warning" role="alert">{{ error.message }}</div>
        {% endfor %}
    {% endif %}

    {{ form_start(form) }}

    {{ form_label(form.title) }}
    {{ form_widget(form.title, { 'attr': {'class': 'form-control mb-1'} }) }}

    {{ form_label(form.description) }}
    {{ form_widget(form.description, { 'attr': {'class': 'form-control mb-1'} }) }}

    {{ form_label(form.dateStart) }}
    <div class="form-row no-gutters justify-content-center">
        {{ form_widget(form.dateStart.day,  { 'attr': {'class': 'form-control mb-1 data-stock'} }) }}
        {{ form_widget(form.dateStart.month, { 'attr': {'class': 'form-control mb-1 data-stock'} }) }}
        {{ form_widget(form.dateStart.year, { 'attr': {'class': 'form-control mb-1 data-stock'} }) }}
    </div>

    {{ form_label(form.dateEnd) }}
    <div class="form-row no-gutters justify-content-center">
        {{ form_widget(form.dateEnd.day,  { 'attr': {'class': 'form-control mb-1 data-stock'} }) }}
        {{ form_widget(form.dateEnd.month, { 'attr': {'class': 'form-control mb-1 data-stock'} }) }}
        {{ form_widget(form.dateEnd.year, { 'attr': {'class': 'form-control mb-1 data-stock'} }) }}
    </div>

    {{ form_label(form.image) }}<br>
    {{ form_widget(form.image, { 'attr': {'class': 'mb-1'} }) }}

{#    <a href= " {{ asset('uploads/brochures/' ~ stock.image) }} "> View brochure (PDF)</a>#}

    {{ form_widget(form.save, { 'attr': {'class': 'btn btn-block btn-primary mt-2'} }) }}

    {{ form_end(form) }}

{% endblock %}