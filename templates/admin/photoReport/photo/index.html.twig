{% extends 'admin/adminbase.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block h1 %}{{ h1 }}{% endblock %}

{% block entity_list %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    {% if photos is empty %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Список фотографий пока что пуст!
        </div>
    {% endif %}

    <div class="container-fluid">
        <div class="row">
            {% for photo in photos %}
                <div class="col-sm-2">
                    <figure>
                        <div class="thumb">
                            <a data-fancybox="gallery" href="{{ asset('uploads/images/photoReport/photo/' ~ photo.image) }}">
                                <img src="{{ asset('uploads/images/photoReport/photo/' ~ photo.image) }}" class="rounded img-fluid" width="300">
                            </a>
                        </div>
                        <figcaption class="text-center text-size-figcaption mt-1">{{ photo.description }}<br>
                            {% if (id_photo_report) %}
                                <a href="{{ path('admin_photo_update', {'id': photo.id, 'id_photo_report': id_photo_report}) }}" class="btn btn-dark mt-2 mr-1">Редактировать</a>
                                <a href="{{ path('admin_photo_delete', {'id': photo.id, 'id_photo_report': id_photo_report}) }}" class="btn btn-danger mt-2">Удалить</a>
                            {% else %}
{#                                <div class="col-12">#}
{#                                    <a href="{{ path('admin_photo_update', {'id': photo.id}) }}" class="btn btn-block btn-dark btn-sm mt-1 mr-1">Редактировать</a>#}
{#                                </div>#}
                                <a href="{{ path('admin_photo_update', {'id': photo.id}) }}" class="btn btn-block btn-dark btn-sm mt-1 mr-1">Редактировать</a>
                                <a href="{{ path('admin_photo_delete', {'id': photo.id}) }}" class="btn btn-block btn-danger btn-sm mt-1">Удалить</a>
                            {% endif %}
                        </figcaption>
                    </figure>
                </div>
            {% endfor %}
        </div>
    </div>

    {% if (id_photo_report) %}
        <a href="{{ path('admin_photo_create', {'id_photo_report': id_photo_report}) }}" class="btn btn-success mt-3">Добавить фотографию</a>
    {% else %}
        <a href="{{ path('admin_photo_create') }}" class="btn btn-success mt-3">Добавить фотографию</a>
    {% endif %}

